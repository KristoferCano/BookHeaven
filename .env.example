################################################################################
# BookHeaven - Variables de Entorno Centralizado
# Copia este archivo a .env y actualiza los valores según tu entorno
################################################################################

# APLICACIÓN
APP_NAME=BookHeaven
APP_ENV=local
APP_DEBUG=true
APP_KEY=
APP_URL=http://localhost

# LOCALIZACIÓN
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

# BASE DE DATOS - PostgreSQL (Docker)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=bookheaven
DB_USERNAME=bookheaven
DB_PASSWORD=secret

# FRONTEND - React
VITE_API_URL=http://localhost:8000
VITE_APP_TITLE=BookHeaven

# MAIL
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME=BookHeaven

# SESIÓN & CACHE & QUEUE
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
CACHE_STORE=database
QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# REDIS (opcional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# LOGGING
LOG_CHANNEL=stack
LOG_LEVEL=debug

# DOCKER
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12
